<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_hijau_view"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="27dp">


            <ImageView
                android:id="@+id/toll_kembali_tps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_panah_kanan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="TPS Yogyakarta"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/toll_kembali_tps"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_tps"
                android:layout_marginEnd="20dp"
                android:src="@drawable/notifikasi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

    <!-- layout reguler -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_layanan"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="167dp"
            android:id="@+id/kotak_img_tps"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/img_tps_terpilih"
                android:layout_width="250dp"
                android:layout_height="147dp"
                android:isScrollContainer="true"
                android:src="@drawable/foto_tps"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />





        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/kotak_data_tps"
            app:layout_constraintTop_toBottomOf="@id/kotak_img_tps"
            android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_2_tps">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:id="@+id/tv_nTPS"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TPS Kusuma"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- fasilitas -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/kotak_fasilitas"
                app:layout_constraintTop_toBottomOf="@id/tv_nTPS"
                android:layout_marginTop="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="85dp"
                    android:layout_height="100dp"
                    android:id="@+id/kotak_ic_orang"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/img_orang"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:src="@drawable/ic_orang"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_orang"
                        app:layout_constraintTop_toBottomOf="@id/img_orang"
                        android:text="10 Orang Pekerja"
                        android:textSize="15sp"
                        android:textColor="#5A605D"
                        app:layout_constraintStart_toStartOf="@id/img_orang"
                        android:layout_marginTop="5dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="85dp"
                    android:layout_height="120dp"
                    android:id="@+id/kotak_ic_kend"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/kotak_ic_orang"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp">

                    <ImageView
                        android:id="@+id/img_kend"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:src="@drawable/ic_kend"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_kend"
                        app:layout_constraintTop_toBottomOf="@id/img_kend"
                        android:text="Motor, Mobil, Pickup"
                        android:textSize="15sp"
                        android:textColor="#5A605D"
                        app:layout_constraintStart_toStartOf="@id/img_kend"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:id="@+id/kotak_ic_almt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/kotak_ic_kend"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp">

                    <ImageView
                        android:id="@+id/img_almt"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:src="@drawable/ic_alamat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_almt"
                        app:layout_constraintTop_toBottomOf="@id/img_almt"
                        android:text="Jl.Merdeka no 2"
                        android:textColor="#5A605D"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="@id/img_almt"
                        android:layout_marginTop="5dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- deskripsi -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/kotak_desk"
                app:layout_constraintTop_toBottomOf="@id/kotak_fasilitas"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_deskripsi"
                    android:text="Deskripsi"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"/>
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="370dp"
                    android:layout_height="80dp"
                    android:id="@+id/tv_info_desk_tps"
                    app:layout_constraintTop_toBottomOf="@id/tv_deskripsi"
                    android:layout_marginTop="13dp"
                    app:layout_constraintStart_toStartOf="@id/tv_deskripsi">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TPS Kusuma  yang berdiri di sleman sejak tahun 2017 yang aktif melayani masyarakat sekitar Yogya"
                            android:textSize="18sp"
                            android:textColor="#5A605D"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="278dp"
                android:layout_height="140dp"
                app:layout_constraintTop_toBottomOf="@id/kotak_desk"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/bg_variasi_sampah"/>






        </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


